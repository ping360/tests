<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

<welcome-file-list>
		<welcome-file>home.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet>
		<servlet-name>SignUpServlet</servlet-name>
		<servlet-class>ua.com.servlet.SignUpServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SignUpServlet</servlet-name>
		<url-pattern>/hello</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>SendInfoServlet</servlet-name>
		<servlet-class>ua.com.servlet.SendInfoServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SendInfoServlet</servlet-name>
		<url-pattern>/sendInfo</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SomeServlet</servlet-name>
		<servlet-class>ua.com.servlet.SomeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SomeServlet</servlet-name>
		<url-pattern>/some</url-pattern>
</servlet-mapping>

</web-app>